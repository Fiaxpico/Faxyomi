<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--========-->
    <!--Toolbars-->
    <!--========-->

    <style name="Theme.faxyomi.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnSurface</item>
    </style>


    <!--===========-->
    <!--AlertDialog-->
    <!--===========-->
    <style name="ThemeOverlay.faxyomi.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:layout">@layout/m3_alert_dialog</item>
        <item name="android:background">@drawable/material_popup_background</item>
        <item name="dialogCornerRadius">@dimen/m3_alert_dialog_corner_size</item>
    </style>


    <!--===============-->
    <!--Text Appearance-->
    <!--===============-->
    <style name="TextAppearance.Widget.Button" parent="TextAppearance.Material3.TitleSmall" />

    <style name="TextAppearance.Widget.Menu" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.faxyomi.Preference.Secondary" parent="TextAppearance.Material3.BodySmall" />

    <style name="TextAppearance.faxyomi.SectionHeader" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>


    <!--=======================-->
    <!--Widgets.MaterialDivider-->
    <!--=======================-->
    <style name="Widget.faxyomi.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/divider_default</item>
    </style>


    <!--==============-->
    <!--Widgets.Switch-->
    <!--==============-->
    <style name="Widget.faxyomi.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.faxyomi.Switch</item>
    </style>

    <style name="ThemeOverlay.faxyomi.Switch" parent="">
        <item name="elevationOverlayEnabled">@bool/elevationOverlayEnabled</item>
    </style>


    <!--===========-->
    <!--Preferences-->
    <!--===========-->
    <style name="PreferenceThemeOverlay.faxyomi">
        <item name="preferenceCategoryTitleTextAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="switchPreferenceCompatStyle">@style/PreferenceThemeOverlay.faxyomi.SwitchPreferenceCompat</item>
    </style>

    <style name="PreferenceThemeOverlay.faxyomi.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="android:widgetLayout">@layout/pref_widget_switch_material</item>
    </style>

</resources>
